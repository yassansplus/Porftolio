            </div>
        </div>
    </section>
    <!-- End top-category-widget Area -->





    <!-- Start post-content Area -->
    <section class="post-content-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 posts-list">
                    {% for blog in blogs %}
                        {% if blog.published %}
                            <div class="single-post row">
                                <div class="col-lg-3  col-md-3 meta-details">
                                    {#<ul class="tags">#}
                                        {#<li><a href="#">Food,</a></li>#}
                                        {#<li><a href="#">Technology,</a></li>#}
                                        {#<li><a href="#">Politics,</a></li>#}
                                        {#<li><a href="#">Lifestyle</a></li>#}
                                    {#</ul>#}
                                    <div class="user-details row">
                                        <p class="user-name col-lg-12 col-md-12 col-6"><a href="#">Sawssen</a> <span
                                                    class="lnr lnr-user"></span></p>
                                        <p class="date col-lg-12 col-md-12 col-6"><a href="#">{{ blog.publishedAt | date("d/m/Y h:m") }}</a> <span
                                                    class="lnr lnr-calendar-full"></span></p>
                                        <p class="view col-lg-12 col-md-12 col-6"><a href="#">{{ blog.nbViewvers }} Views</a> <span
                                                    class="lnr lnr-eye"></span></p>
                                        <p class="comments col-lg-12 col-md-12 col-6"><a href="#">{{ blog.comments|length }} Commentaires</a> <span
                                                    class="lnr lnr-bubble"></span></p>
                                    </div>
                                </div>
                                <div class="col-lg-9 col-md-9">
                                    <div class="feature-img">
                                        <img class="img-fluid" src="{{ path("image", {slug: blog.slug}) }}" alt="">
                                    </div>
                                    <a class="posts-title" href="{{ path('blog_show',{slug : blog.slug}) }}"><h3>{{ blog.title }}</h3></a>
                                    <p class="excert">
                                        {{ blog.blogArticle| slice(0,255)| striptags | raw }} ...
                                    </p>


                                    <a href="{{ path('blog_show',{slug : blog.slug}) }}" class="primary-btn" data-text="Voir Plus">
                                        <span>V</span>
                                        <span>o</span>
                                        <span>i</span>
                                        <span>r</span>
                                        <span> </span>
                                        <span>P</span>
                                        <span>l</span>
                                        <span>u</span>
                                        <span>s</span>
                                    </a>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
