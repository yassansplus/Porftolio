                        {#some for as low as $.17 each.</p>#}
                    </div>
                </div>
            </div>

            <div class="row">
                {% for job in jobs %}
                    {% set arrayDate =  job.date |split('') %}

                    <div class="col-lg-6 blockJob" {% if is_granted('ROLE_ADMIN') %} data-id="{{ job.id }}" {% endif %}>
                        <div class="single-job">
                            <div class="top-sec d-flex justify-content-between">
                                <div class="top-left">
                                    <h4>{{ job.poste }}</h4>
                                    <p>{{ job.lieu }}</p>
                                </div>
                                <div class="top-right">
                                    <a href="#" class="primary-btn" data-text="{{ job.date }}">
                                        {% for letter in arrayDate %}
                                            <span>{{ letter }}</span>
                                        {% endfor %}
                                    </a>
                                </div>
                            </div>
                            <div class="bottom-sec wow fadeIn" data-wow-duration="2s" data-wow-delay="0.2s">
                              {{ job.description }}
                                <div>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <button class="btn btn-danger btn-delete" data-id="{{ job.id }}">Supprimer</button>
                                    {% endif %}
                                </div>

                            </div>
                        </div>
                    </div>
                {% endfor %}


            </div>
        </div>
    </section>
