{% extends 'base.html.twig' %}

{% block body %}
    <h1>Presentation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ presentation.id }}</td>
            </tr>
            <tr>
                <th>shortDescription</th>
                <td>{{ presentation.shortDescription }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ presentation.username }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ presentation.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('presentation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('presentation_edit', { 'id': presentation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
